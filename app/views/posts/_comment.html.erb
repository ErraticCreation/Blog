<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 padding">
  <header class="media-left">
    <h4><span class="glyphicon glyphicon-user"><%= comment.author_name %>:</span></h4>
  </header>
  <section class="media-body">
    <p class="text-center comment-body"><span class="glyphicon glyphicon-comment strong">:&nbsp;</span><%= comment.body
    %></p>
    <% if user_signed_in? && current_user.admin? %>
        <button class="btn btn-danger btn-sm">
          <%= link_to 'Delete', [comment.post, comment], method: :delete, data: {confirm: 'Really delete the
        comment?'} %>
        </button>
    <% end %>
    <hr>
  </section>

</div>