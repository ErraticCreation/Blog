<% provide(:title, "Home") %>

<div class="row">
  <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
    <div class="page-header">
      <h1>Blog</h1>
    </div>

    <%= render 'posts/blog_post' %>

    <footer class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
      <% if user_signed_in? %>
        <%= link_to 'New Post', new_post_path, class: "btn btn-default" %>
      <% end %>
      <%= will_paginate @posts, class: "pagination-style" %>
    </footer>

  </article>

</div>

<br>


